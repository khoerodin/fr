{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script>
        window.module = 'advertising/account-executives';
        window.field = 'code';
        var columns = [
            'code',
            'employeeCode',
            'employeeJoinDate',
            'departmentCode',
            'sectionCode',
            'name'
        ];
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    <div class="col-md-12 search-area transition">
                        <select class="search-code form-control select2" style="width: 100%;">
                            <option></option>
                        </select>
                    </div>

                    <div class="button-area transition">
                        <a href="JavaScript:Void(0);" data-btn-add="advertising/account-executives" style="visibility: hidden;" class="add-btn h btn btn-flat btn-block btn-danger">Add</a>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th>Code</th>
                            <th>Employee Code</th>
                            <th>Join Date</th>
                            <th>Department Code</th>
                            <th>Section Code</th>
                            <th>Name</th>
                            <th width="5%"><span class="pull-right">Action</span></th>
                        </tr>
                        </thead>

                        <tbody data-list="advertising/account-executives">
                            <tr><td colspan="8">LOADING DATA...</td></tr>
                        </tbody>

                    </table>

                    {#ADD MODAL#}
                    <div data-modal-add="advertising/account-executives" class="add-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Add an Account Executive</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="add form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="name">Code</label>
                                                <input type="text" name="code" class="form-control" id="code" placeholder="Code">
                                            </div>
                                            <div class="form-group">
                                                <label for="employeeCode">Employee Code</label>
                                                <input type="text" name="employeeCode" class="form-control" id="employeeCode" placeholder="Employee Code">
                                            </div>
                                            <div class="form-group">
                                                <label for="employeeJoinDate">Employee Join Date</label>
                                                <input type="text" name="employeeJoinDate" class="form-control date add-datetime" id="employeeJoinDate" placeholder="Employee Join Date">
                                            </div>
                                            <div class="form-group">
                                                <label for="departmentCode">Department Code</label>
                                                <input type="text" name="departmentCode" class="form-control" id="departmentCode" placeholder="Department Code">
                                            </div>
                                            <div class="form-group">
                                                <label for="sectionCode">Section Code</label>
                                                <input type="text" name="sectionCode" class="form-control" id="sectionCode" placeholder="Section Code">
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Name</label>
                                                <input type="text" name="name" class="form-control" id="name" placeholder="Name">
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="save btn btn-flat btn-danger">Save</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END ADD MODAL#}

                    {#DETAIL MODAL#}
                    <div data-modal-detail="advertising/account-executives" class="detail-modal modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail of Account Executives</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="account-executives detail form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="name">Code</label>
                                                <input type="text" name="code" class="form-control" id="code" placeholder="Code">
                                            </div>
                                            <div class="form-group">
                                                <label for="employeeCode">Employee Code</label>
                                                <input type="text" name="employeeCode" class="form-control" id="employeeCode" placeholder="Employee Code">
                                            </div>
                                            <div class="form-group">
                                                <label for="employeeJoinDate">Employee Join Date</label>
                                                <input type="text" name="employeeJoinDate" class="form-control" id="employeeJoinDate" placeholder="Employee Join Date">
                                            </div>
                                            <div class="form-group">
                                                <label for="departmentCode">Department Code</label>
                                                <input type="text" name="departmentCode" class="form-control" id="departmentCode" placeholder="Department Code">
                                            </div>
                                            <div class="form-group">
                                                <label for="sectionCode">Section Code</label>
                                                <input type="text" name="sectionCode" class="form-control" id="sectionCode" placeholder="Section Code">
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Name</label>
                                                <input type="text" name="name" class="form-control" id="name" placeholder="Name">
                                            </div>
                                        <input type="hidden" name="id" id="id">
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="account-executives edit btn btn-flat btn-danger">Update</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="advertising/account-executives" class="pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}