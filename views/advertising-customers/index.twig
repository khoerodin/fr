                                            <div class="form-group">
                                                <label for="detailTaxCity">DATA PAJAK: KOTA</label>
                                                <select name="taxCity" id="detailTaxCity" class="form-control" style="width:100%"></select>
                                            </div>
                                            <div class="form-group">
                                                <label for="detailTaxPhoneNumber">DATA PAJAK: NO. TELEPON</label>
