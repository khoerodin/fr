                                            </div>
                                            <div class="form-group">
                                                <label for="detailPresidentDirectorName">NAMA PRESIDEN DIREKTUR</label>
                                                <input type="text" name="presidentDirectorName" id="detailPresidentDirectorName" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label for="detailMediaManagerName">NAMA MANAJER MEDIA</label>
                                                <input type="text" name="mediaManagerName" id="detailMediaManagerName" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label for="detailBankAccountNumber">NO. REKENING</label>
                                                <input type="text" name="bankAccountNumber" class="form-control" id="detailBankAccountNumber">
                                            </div>
                                            <div class="form-group">
                                                <label for="detailBank">BANK</label>
                                                <select name="bank" id="detailBank" class="form-control" style="width:100%"></select>
                                            </div>
                                            <div class="form-group">
                                                <label for="detailRemark">CATATAN</label>
                                                <input type="text" name="remark" id="detailRemark" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label for="detailCreditLimit">LIMIT KREDIT</label>
                                                <input type="text" name="creditLimit" id="detailCreditLimit" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label for="detailBillingGroup">GRUP TAGIHAN</label>
                                                <select name="billingGroup" id="detailBillingGroup" class="form-control" style="width:100%"></select>
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">TUTUP</button>
                                    <button type="button" id="btn-update" class="btn btn-flat btn-danger">SIMPAN</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul id="customersPagination" class="pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}