{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/Adv/Invoices.js"></script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row" style="margin-bottom: 0px;">
                    <div class="col-md-10">
                        <select class="form-control" id="searchInvoices" style="width: 100%"></select>
                    </div>
                    <div class="col-md-2">
                        <button disabled id="btnAddInvoice" class="btn btn-danger btn-flat btn-block">FAKTUR BARU</button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-responsive table-hover">
                        <thead>
                        <tr>
                            <th width="4%">NO.</th>
                            <th width="55%">NOMOR FAKTUR</th>
                            <th width="25%">JUMLAH</th>
                            <th width="10%">STATUS FAKTUR</th>
                            <th width="3%"><span class="pull-right">AKSI</span></th>
                        </tr>
                        </thead>
                        <tbody id="invoicesList"></tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul id="invoicesPagination" class="pagination pagination-sm pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>

