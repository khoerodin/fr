{% extends 'layout.twig' %}

{% block js %}

{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row" style="margin-bottom: 0px;">
                    <div class="col-md-10">
                        <select class="form-control" id="searchAreas" style="width: 100%"></select>
                    </div>
                    <div class="col-md-2">
                        <button disabled id="btnAddArea" class="btn btn-danger btn-flat btn-block">TAMBAH</button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-responsive table-hover">
                        <thead>
                        <tr>
                            <th width="3%">NO.</th>
                            <th width="10%">KODE</th>
                            <th>WILAYAH TAGIH</th>
                            <th width="4%"><span class="pull-right">AKSI</span></th>
                        </tr>
                        </thead>
                        <tbody id="areasList"></tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul id="areasPagination" class="pagination pagination-sm pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}