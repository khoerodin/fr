{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/Adv/Layouts.js"></script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header" style="margin-bottom: 0px;">
                    <select class="form-control" id="searchLayouts" style="width: 100%"></select>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-responsive table-hover">
                        <thead>
                        <tr>
                            <th width="3%">NO.</th>
                            <th>LAYOUT</th>
                            <th width="4%"><span class="pull-right">AKSI</span></th>
                        </tr>
                        </thead>
                        <tbody id="layoutsList"></tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul id="layoutsPagination" class="pagination pagination-sm pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>

    {#Modal#}
    <div id="detailModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">DETAIL MODAL</h4>
                </div>
                <div class="modal-body">
                    <form id="detailForm">
                        <div class="form-group">
                            <label for="name">Layout</label>
                            <input type="text" name="name" id="name" class="form-control" placeholder="Nama Layout">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">TUTUP</button>
                    <button type="button" id="btn-update" class="btn btn-danger btn-flat">SIMPAN</button>
                </div>
            </div>

        </div>
    </div>
    {#Modal#}
{%- endblock -%}