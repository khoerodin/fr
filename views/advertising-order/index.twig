{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/adv-order.js"></script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <form class="row">
                        <div class="col-md-6 row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Order Dari</label>
                                    <select name="orderFrom" id="orderFrom" class="form-control" style="width: 100%">
                                        <option selected disabled>PILIH PERWAKILAN</option>
                                        {% for rep in representatives %}
                                            <option value="/api/representatives/{{ rep.id }}">{{ rep.code }} - {{ rep.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Nomor Order</label>
                                    <input type="text" name="orderNumber" id="orderNumber" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Nomor Surat Order</label>
                                    <input type="text" name="orderLetter" id="orderLetter" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Tanggal Booking</label>
                                    <div class='input-group date' id='dtBookedAt'>
                                        <input type='text' name="bookedAt" id="bookedAt" class="form-control" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Tanggal Faktur</label>
                                    <div class='input-group date' id='dtInvoicedAt'>
                                        <input type='text' name="invoicedAt" id="invoicedAt" class="form-control" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <hr>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Pemasang</label>
                                    <div class="input-group" id="pemasang">
                                        <input type="text" readonly name="pemasang" class="form-control">
                                        <input type="hidden" name="customer" id="customer" >
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Alamat</label>
                                    <input readonly id="customerAddress" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Klien</label>
                                    <div class="input-group" id="klien">
                                        <input type="text" readonly name="klien" class="form-control">
                                        <input type="hidden" name="client" id="client">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Cetak Di Faktur</label>
                                    <select type="text" class="form-control" id="cetakDiFaktur" style="width: 100%">
                                        <option disabled selected>PILIH</option>
                                        <option value="customer">PEMASANG</option>
                                        <option value="client">KLIEN</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Surat Perjanjian</label>
                                    <input type="text" name="Surat Perjanjian" class="form-control">
                                    <p class="help-block">Dipilih jika terdapat perjanjian kerjasama</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Jenis Iklan</label>
                                    <div class="input-group" id="jenisIklan">
                                        <input type="text" readonly name="jenisIklan" class="form-control">
                                        <input type="hidden" name="specification" id="specification" >
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Emiten</label>
                                    <div class="input-group" id="emiten">
                                        <input type="text" readonly name="emiten" class="form-control">
                                        <input type="hidden" id="category1" name="category1">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Nama PIC</label>
                                    <div class="input-group" id="pic">
                                        <input type="text" name="pic" class="form-control">
                                        <input type="hidden" id="accountExecutive" name="accountExecutive">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Tipe Iklan</label>
                                    <div class="input-group" id="tipeIklan">
                                        <input type="text" readonly name="tipeIklan" class="form-control">
                                        <input type="hidden" name="type" id="type" >
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Pasang Di</label>
                                    <div class="input-group" id="mediaIklan">
                                        <input type="text" name="mediaIklan" class="form-control">
                                        <input type="hidden" id="media" name="media">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Sektor</label>
                                    <div class="input-group" id="sektor">
                                        <input type="text" name="sektor" class="form-control">
                                        <input type="hidden" id="category2" name="category2">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Sub Sektor</label>
                                    <div class="input-group" id="sub-sektor">
                                        <input type="text" name="sub-sektor" class="form-control">
                                        <input type="hidden" id="category3" name="category3">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Judul Iklan</label>
                                    <input type="text" name="title" id="title" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Ukuran</label>
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <div class="input-group">
                                                <input type="number" name="columnSize" id="columnSize" min="1" class="form-control">
                                                <div class="input-group-addon">kolom</div>
                                            </div>
                                        </div>
                                        <div class="col-xs-1">
                                            <div class="text-bold" style="margin-left: 13px;font-size: 16px;margin-top: 5px;">X</div>
                                        </div>
                                        <div class="col-xs-3">
                                            <div class="input-group">
                                                <input type="number" name="milimeterSize" id="milimeterSize" min="1" class="form-control">
                                                <div class="input-group-addon">mm/baris</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <label for="">Terbit</label>
                                            <div class="input-group">
                                                <input type="number" name="totalPost" id="totalPost" min="1" class="form-control">
                                                <div class="input-group-addon">kali</div>
                                            </div>
                                        </div>
                                        <div class="col-xs-3">
                                            <label for="">Kontrak</label>
                                            <div class="input-group">
                                                <input type="number" name="contractDuration" id="contractDuration" min="0" class="form-control">
                                                <div class="input-group-addon">bulan</div>
                                            </div>
                                        </div>
                                        <div class="col-xs-3">
                                            <label for="">Edisi Terbit</label>
                                            <button class="btn btn-default btn-block btn-flat"><i class="fa fa-pencil-square-o"></i> Set Edisi Terbit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <hr>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-4">
                                            <label for="">Tarif Iklan</label>
                                            <input type="text" name="basePrice" id="basePrice" class="form-control">
                                        </div>
                                        <div class="col-xs-4">
                                            <label for="">Diskon Rp</label>
                                            <input type="number" name="discountValue" id="discountValue" min="0" class="form-control">
                                        </div>
                                        <div class="col-xs-3">
                                            <label for="">Diskon %</label>
                                            <div class="input-group">
                                                <input type="number" name="discountPercentage" id="discountPercentage" min="0" class="form-control">
                                                <div class="input-group-addon">%</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-4">
                                            <label for="">PPN Rp</label>
                                            <input type="number" name="taxValue" id="taxValue" min="0" class="form-control">
                                        </div>
                                        <div class="col-xs-4">
                                            <label for="">PPN %</label>
                                            <div class="input-group">
                                                <input type="number" name="taxPercentage" id="taxPercentage" min="0" class="form-control">
                                                <div class="input-group-addon">%</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-4">
                                            <label for="">Jumlah Bayar</label>
                                            <input type="text" name="totalAmount" id="totalAmount" readonly class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-4">
                                            <label for="">Quantity</label>
                                            <div class="input-group">
                                                <input type="number" name="quantity" id="quantity" min="1" class="form-control">
                                                <div class="input-group-addon">kali</div>
                                            </div>
                                        </div>
                                        <div class="col-xs-4">
                                            <label for="">Materai</label>
                                            <input type="text" name="material" id="material" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Netto</label>
                                    <div class="bg-aqua" style="padding: 10px; height: 133px;">
                                        <div style="font-size: 40px;font-weight: bold;" id="netto"></div>
                                        <div style="font-size: 21px; font-style: italic;"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Jenis Bayar</label>
                                    <select name="paymentMethod" id="paymentMethod" class="form-control" style="width: 100%">
                                        <option selected disabled>PILIH JENIS BAYAR</option>
                                        {% for jb in paymentMethod %}
                                            <option value="/api/billing/payment-methods/{{ jb.id }}">{{ rep.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Sisipan</label>
                                    <div class="input-group" id="sisipan">
                                        <input type="text" readonly name="sisipan" class="form-control">
                                        <input type="hidden" id="sirculationArea" name="sirculationArea">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-flat" type="button"><i class="fa fa-ellipsis-h text-muted"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Keterangan Materi</label>
                                    <input type="text" name="materialDescription" id="materialDescription" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Keterangan Order</label>
                                    <input type="text" name="orderDescription" id="orderDescription" class="form-control">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="box-footer clearfix">
                    {#Footer content here#}
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>

    {#Pemasang Modal#}
    <div id="pemasangModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Pilih Pemasang Iklan</h4>
                    <small class="text-success">Dobel klik Pemasang Iklan untuk memilihnya</small>
                </div>
