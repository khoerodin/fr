{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/Adv/OrdersInvoices.js"></script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header" style="margin-bottom: 0px;">
                    <select class="form-control" id="searchInvoices" style="width: 100%"></select>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-responsive table-hover">
                        <thead>
                            <tr>
                                <th width="3%">NO.</th>
                                <th width="15%">NOMOR ORDER</th>
                                <th width="25%">JUDUL IKLAN</th>
                                <th width="7%">STATUS DETAIL</th>
                                <th>FAKTUR</th>
                                <th width="3%"><span class="pull-right">AKSI</span></th>
                            </tr>
                        </thead>
                        <tbody id="invoicesList"></tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul id="invoicePagination" class="pagination pagination-sm pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>

    {#Modal#}
    <div id="invoicesModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">MEMBUAT FAKTUR ORDER: <span class="text-muted">NO-ORDER-HERE</span></h4>
                </div>
                <div class="modal-body">
                    <p>Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    {#Modal#}
{%- endblock -%}