{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script src="/assets/scripts/adv-prices.js"></script>
    <script>
        window.module = 'advertising/prices';
        window.field = 'price';
        var columns = [
            'year',
            'specificationDetail.name',
            'price'
        ];
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    <div class="col-md-12 search-area transition">
                        <select id="search-specificationDetailName" data-placeholder="CARI DETAIL JENIS IKLAN" class="form-control select2" style="width: 100%;"></select>
                    </div>

                    <div class="button-area transition">
                        <a href="JavaScript:Void(0);" data-btn-add="advertising/prices" style="visibility: hidden;" class="clients add-btn h btn btn-flat btn-block btn-danger">Add</a>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th>Tahun</th>
                            <th>Detail Jenis Iklan</th>
                            <th>Harga</th>
                            <th width="5%"><span class="pull-right">Aksi</span></th>
                        </tr>
                        </thead>

                        <tbody data-list="advertising/prices">
                            <tr><td colspan="5">...</td></tr>
                        </tbody>

                    </table>

                    {#ADD MODAL#}
                    <div data-modal-add="advertising/prices" class="add-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Tambah Harga Iklan</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="add form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="year">Tahun</label>
                                                <input type="number" name="year" class="form-control" id="year" placeholder="Tahun">
                                            </div>
                                            <div class="form-group">
                                                <label>Detail Jenis Iklan</label>
                                                    <select style="width: 100%" name="specificationDetail" data-object="advertising/specification-details#name" class="form-control select-add-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="price">Harga</label>
                                                <input type="text" name="price" class="form-control" id="price" placeholder="Harga">
                                            </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="save btn btn-flat btn-danger">Save</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END ADD MODAL#}

                    {#DETAIL MODAL#}
                    <div data-modal-detail="advertising/prices" class="detail-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail Area Billing</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="detail form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="year">Tahun</label>
                                                <input type="number" name="year" class="form-control" id="year" placeholder="Year">
                                            </div>
                                            <div class="form-group">
                                                <label>Detail Jenis Iklan</label>
                                                <select name="specificationDetail" data-object="advertising/specification-details#name" data-selected="specificationDetail#name" class="form-control select-edit-modal">
                                                    <option selected>Loading...</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="price">Harga</label>
                                                <input type="text" name="price" class="form-control" id="price" placeholder="Harga">
                                            </div>
                                        </div>
                                        <input type="hidden" name="id" id="id">
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="edit btn btn-flat btn-danger">Update</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="advertising/prices" class="pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}