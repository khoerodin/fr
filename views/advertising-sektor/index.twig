{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/adv-sektor.js"></script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    <div class="col-md-10 adv-sektor-search transition">
                        <select class="form-control" id="select-emiten"></select>
                    </div>

                    <div class="button-adv-sektor col-md-2 transition">
                        <a href="#" style="visibility: hidden;" class="add-btn h btn btn-flat btn-block btn-danger">Add</a>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th>Sektor</th>
                            <th width="5%"><span class="pull-right">Aksi</span></th>
                        </tr>
                        </thead>

                        <tbody id="sektor-body">
                        <tr><td colspan="3">SILAKAN PILIH EMITEN</td></tr>
                        </tbody>

                    </table>

                    {#ADD MODAL#}
                    <div id="sektor-add" class="add-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Tambah Sektor</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="add form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="name">Sektor</label>
                                                <input type="text" name="name" class="form-control" id="name" placeholder="Sektor">
                                            </div>
                                        </div>
                                        <input type="hidden" name="parent">
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="save btn btn-flat btn-danger">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {#END ADD MODAL#}

                    {#DETAIL MODAL#}
                    <div id="detail-sektor" class="modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail Sektor</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="detail form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="name">Sektor</label>
                                                <input type="text" name="name" class="form-control" id="name" placeholder="Sektor">
                                            </div>
                                        </div>
                                        <input type="hidden" name="id">
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="edit btn btn-flat btn-danger">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="advertising/categories" class="clients pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}