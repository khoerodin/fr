{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/Adv/Specifications.js?{{ microtime }}"></script>
    <script src="/assets/scripts/Adv/SpecificationDetails.js?{{ microtime }}"></script>
    <script src="/assets/scripts/Adv/Prices.js?{{ microtime }}"></script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row" style="margin-bottom: 0px;">
                    <div class="col-md-10">
                        <select class="form-control" id="searchSpecifications" style="width: 100%"></select>
                    </div>
                    <div class="col-md-2">
                        <button disabled id="btnAddSpecification" class="btn btn-danger btn-flat btn-block">TAMBAH</button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-responsive table-hover">
                        <thead>
                        <tr>
                            <th width="3%">NO.</th>
                            <th>JENIS IKLAN</th>
                            <th width="6%"><span class="pull-right">AKSI</span></th>
                        </tr>
                        </thead>
                        <tbody id="specificationsList"></tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul id="specificationsPagination" class="pagination pagination-sm pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>

    {#Add Modal#}
    <div id="addModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">TAMBAH JENIS IKLAN</h4>
                </div>
                <div class="modal-body">
                    <form id="addForm">
                        <div class="form-group">
                            <label for="addName">JENIS IKLAN</label>
                            <input type="text" name="name" id="addName" class="form-control">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">TUTUP</button>
                    <button type="button" id="btn-add" class="btn btn-danger btn-flat">SIMPAN</button>
                </div>
            </div>

        </div>
    </div>
    {#End Add Modal#}

    {#Detail Modal#}
    <div id="detailModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">DETAIL JENIS IKLAN</h4>
                </div>
                <div class="modal-body">
                    <form id="detailForm">
                        <div class="form-group">
                            <label for="detailName">JENIS IKLAN</label>
                            <input type="text" name="name" id="detailName" class="form-control">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">TUTUP</button>
                    <button type="button" id="btn-update" class="btn btn-danger btn-flat">SIMPAN</button>
                </div>
            </div>

        </div>
    </div>
    {#End Detail Modal#}

    {#Detail Jenis Iklan Modal#}
    <div id="specDetailModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">DETAIL JENIS IKLAN</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-10">
                            <select class="form-control" id="searchSpecificationDetails" style="width: 100%"></select>
                        </div>
                        <div class="col-md-2">
                            <button disabled id="btnAddSpecificationDetail" class="btn btn-danger btn-flat btn-block">TAMBAH</button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-responsive table-hover" style="margin-top:20px;">
                                <thead>
                                <tr>
                                    <th width="3%">NO.</th>
                                    <th>DETAIL JENIS IKLAN</th>
                                    <th>TIPE IKLAN</th>
                                    <th>CATATAN</th>
                                    <th width="15%"><span class="pull-right">AKSI</span></th>
                                </tr>
                                </thead>
                                <tbody id="specificationDetailsList"></tbody>
                            </table>

                            <ul id="specificationDetailsPagination" class="pagination pagination-sm pull-right">
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">TUTUP</button>
                </div>
            </div>

        </div>
    </div>
    {#End Detail Jenis Iklan Modal#}

    {#Add Spec Detail Modal#}
    <div id="addSpecDetailModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">TAMBAH DETAIL JENIS IKLAN</h4>
                </div>
                <div class="modal-body">
                    <form id="addSpecDetailForm">
                        <div class="form-group">
                            <label for="addName">DETAIL JENIS IKLAN</label>
                            <input type="text" name="name" id="addName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="addType">TIPE IKLAN</label>
                            <select name="type" id="addType" style="width: 100%"></select>
                        </div>
                        <div class="form-group">
                            <label for="addRemark">CATATAN</label>
                            <textarea name="remark" id="addRemark" class="form-control"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">TUTUP</button>
                    <button type="button" id="btn-add-spec-detail" class="btn btn-danger btn-flat">SIMPAN</button>
                </div>
            </div>

        </div>
    </div>
    {#End Spec Detail Add Modal#}

    {#Detail Modal#}
    <div id="detailSpecDetailModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">DETAIL DETAIL JENIS IKLAN</h4>
                </div>
                <div class="modal-body">
                    <form id="detailSpecDetailForm">
                        <div class="form-group">
                            <label for="detailName">DETAIL JENIS IKLAN</label>
                            <input type="text" name="name" id="detailName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="detailType">TIPE IKLAN</label>
                            <select name="type" id="detailType" style="width: 100%"></select>
                        </div>
                        <div class="form-group">
                            <label for="detailRemark">CATATAN</label>
                            <textarea name="remark" id="detailRemark" class="form-control"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">TUTUP</button>
                    <button type="button" id="btn-update-spec-detail" class="btn btn-danger btn-flat">SIMPAN</button>
                </div>
            </div>

        </div>
    </div>
    {#End Detail Modal#}

    {#Harga Iklan Modal#}
    <div id="pricesModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">HARGA IKLAN</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-10">
                            <select class="form-control" id="searchPrices" style="width: 100%"></select>
                        </div>
                        <div class="col-md-2">
                            <button disabled id="btnAddPrices" class="btn btn-danger btn-flat btn-block">TAMBAH</button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-responsive table-hover" style="margin-top:20px;">
                                <thead>
                                <tr>
                                    <th width="3%">NO.</th>
                                    <th>TAHUN</th>
                                    <th>HARGA</th>
                                    <th>AKTIF?</th>
                                    <th width="10%"><span class="pull-right">AKSI</span></th>
                                </tr>
                                </thead>
                                <tbody id="pricesList"></tbody>
                            </table>

                            <ul id="pricesPagination" class="pagination pagination-sm pull-right">
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">TUTUP</button>
                </div>
            </div>

        </div>
    </div>
    {#End Harga Iklan Modal#}

    {#Add Price#}
    <div id="addPriceModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">TAMBAH HARGA IKLAN</h4>
                </div>
                <div class="modal-body">
                    <form id="addPriceForm">
                        <div class="form-group">
                            <label for="addYear">TAHUN</label>
                            <input type="text" name="year" id="addYear" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="addPrice">HARGA</label>
                            <input type="text" name="price" id="addPrice" class="form-control">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">TUTUP</button>
                    <button type="button" id="btn-add-price" class="btn btn-danger btn-flat">SIMPAN</button>
                </div>
            </div>

        </div>
    </div>
    {#End Add Price#}

    {#Detail Price#}
    <div id="detailPriceModal" class="modal" role="dialog">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">DETAIL HARGA IKLAN</h4>
                </div>
                <div class="modal-body">
                    <form id="detailPriceForm">
                        <div class="form-group">
                            <label for="detailYear">TAHUN</label>
                            <input type="text" name="year" id="detailYear" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="detailPrice">HARGA</label>
                            <input type="text" name="price" id="detailPrice" class="form-control">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="active" id="detailActive"> Aktif
                            </label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-flat" data-dismiss="modal">TUTUP</button>
                    <button type="button" id="btn-update-price" class="btn btn-danger btn-flat">SIMPAN</button>
                </div>
            </div>

        </div>
    </div>
    {#End Detail Price#}
{%- endblock -%}