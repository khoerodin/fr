{% extends 'layout.twig' %}

{%- block content -%}
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Client Form</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" action="/clients/process-add" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control" id="name" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control" id="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="apiKey">Api Key</label>
                            <input type="text" name="apiKey" class="form-control" id="apiKey" placeholder="Api Key">
                        </div>
                        <div class="form-group">
                            <label>User</label>
                            <select name="user" class="form-control">
                                {% for user in users %}
                                    <option value="{{ user.id }}">{{ user.fullname }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-danger btn-flat">Save</button>
                    </div>
                </form>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}