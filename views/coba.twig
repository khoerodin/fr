{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script>
        window.module = 'banks';
        window.field = 'name';
        var columns = [
            'id',
            'code',
            'name'
        ];
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header row">
                <div class="col-md-12 search-area transition">
                    <select data-placeholder="CARI NAMA BANK" class="search-name form-control select2" style="width: 100%;">
                        <option></option>
                    </select>
                </div>

                <div class="button-area transition">
                    <a href="JavaScript:Void(0);" data-btn-add="banks" style="visibility: hidden;" class="add-btn h btn btn-flat btn-block btn-danger">Add</a>
                </div>
                &nbsp;&nbsp;&nbsp;
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th width="5%">#</th>
                        <th>Kode Bank</th>
                        <th>Nama Bank</th>
                        <th width="5%"><span class="pull-right">Aksi</span></th>
                    </tr>
                    </thead>

                    <tbody data-list="banks">
                    <tr><td colspan="4">LOADING DATA...</td></tr>
                    </tbody>

                </table>

                {#ADD MODAL#}
                <div data-modal-add="banks" class="add-modal modal" role="dialog">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Tambah Bank</h4>
                            </div>
                            <div class="modal-body">
                                <form role="form" class="add form">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label for="id">id Bank</label>
                                            <input type="text" name="id" class="form-control" id="id" placeholder="id Bank">
                                        </div>
                                        <div class="form-group">
                                            <label for="code">Kode Bank</label>
                                            <input type="text" name="code" class="form-control" id="code" placeholder="Kode Bank">
                                        </div>
                                        <div class="form-group">
                                            <label for="name">Nama Bank</label>
                                            <input type="text" name="name" class="form-control" id="name" placeholder="Nama Bank">
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                <button type="button" class="save btn btn-flat btn-danger">Save</button>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
                {#END ADD MODAL#}

                {#DETAIL MODAL#}
                <div data-modal-detail="banks" class="detail-modal modal" tabindex="-1" role="dialog">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Detail Bank</h4>
                            </div>
                            <div class="modal-body">
                                <form role="form" class="detail form">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label for="code">Kode Bank</label>
                                            <input type="text" name="code" class="form-control" id="code" placeholder="Kode Bank">
                                        </div>
                                        <div class="form-group">
                                            <label for="name">Nama Bank</label>
                                            <input type="text" name="name" class="form-control" id="name" placeholder="Nama Bank">
                                        </div>
                                    </div>
                                    <input type="hidden" name="id" id="id">
                                    <!-- /.box-body -->
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                <button type="button" class="edit btn btn-flat btn-danger">Update</button>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
                {#END DETAIL MODAL#}

                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="banks" class="clients pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}