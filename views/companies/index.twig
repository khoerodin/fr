{% extends 'layout.twig' %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Companies List</h3>

                    <div class="box-tools">
                        <a href="companies/add" class="btn btn-xs btn-flat btn-danger">Add</a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Contact Person</th>
                            <th>Phone Number</th>
                            <th>Action</th>
                        </tr>
                        {% for company in companies['hydra:member'] %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ company.name }}</td>
                                <td>{{ company.email }}</td>
                                <td>{{ company.address }}</td>
                                <td>{{ company.contactPerson }}</td>
                                <td>{{ company.phoneNumber }}</td>
                                <td>
                                    <a href="/companies/details/{{ company.id }}" class="btn btn-success btn-xs btn-flat">Details</a>
                                    <a href="/companies/edit/{{ company.id }}" class="btn btn-warning btn-xs btn-flat">Edit</a>
                                    <a href="/companies/delete/{{ company.id }}" class="btn btn-danger btn-xs btn-flat">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        {% for page in companies['hydra:view'] %}
                            {% if page['hydra:first'] %}
                                <li><a href="{{ page }}" title="First page">FIRST</a></li>
                            {% endif %}
                            {% if page['hydra:next'] %}
                                <li><a href="{{ page }}" title="Next page">NEXT</a></li>
                            {% endif %}
                            {% if page['hydra:previous'] %}
                                <li><a href="{{ page }}" title="Previous page">PREVIOUS</a></li>
                            {% endif %}
                            {% if page['hydra:next'] %}
                                <li><a href="{{ page }}" title="Last page">LAST</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}