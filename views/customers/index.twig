{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script>
        window.module = 'customers';
        window.field = 'name';
        var columns = [
            'company.name',
            'account.name',
            'name',
            'address',
            'phoneNumber'
        ];
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    <div class="col-md-10">
                        <select class="search-name form-control select2">
                            <option></option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <button style="visibility: visible;" class="customers add-btn h btn btn-flat btn-block btn-danger">Add</button>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th>Company</th>
                            <th>Account</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone Number</th>
                            <th width="12%"><span class="pull-right">Action</span></th>
                        </tr>
                        </thead>

                        <tbody class="customers">
                            <tr><td colspan="7">LOADING DATA...</td></tr>
                        </tbody>

                    </table>

                    {#ADD MODAL#}
                    <div class="customers add-modal modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Add a Customer</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="customers add form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>Company</label>
                                                <select disabled name="company" id="companies-name" class="form-control select-add-modal loading">
                                                    <option selected>Loading...</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Account</label>
                                                <select disabled name="account" id="accounts-name" class="form-control select-add-modal loading">
                                                    <option selected>Loading...</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Name</label>
                                                <input type="text" name="name" class="form-control" id="name" placeholder="Name">
                                            </div>
                                            <div class="form-group">
                                                <label for="address">Address</label>
                                                <input type="text" name="address" class="form-control" id="address" placeholder="Address">
                                            </div>
                                            <div class="form-group">
                                                <label for="phoneNumber">Phone Number</label>
                                                <input type="text" name="phoneNumber" class="form-control" id="phoneNumber" placeholder="Phone Number">
                                            </div>
                                            <div class="form-group">
                                                <label for="contactPerson">Contact Person</label>
                                                <input type="text" name="contactPerson" class="form-control" id="contactPerson" placeholder="Contact Person">
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Email</label>
                                                <input type="email" name="email" class="form-control" id="email" placeholder="Email">
                                            </div>
                                            <div class="form-group">
                                                <label for="remark">Remark</label>
                                                <input type="text" name="remark" class="form-control" id="remark" placeholder="Remark">
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="customers save btn btn-flat btn-danger">Save</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END ADD MODAL#}

                    {#DETAIL MODAL#}
                    <div class="customers detail-modal modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail of Customer</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="customers detail form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>Company</label>
                                                <select name="company" data-object="companies-name" id="company" data-selected="company-name" class="form-control select-edit-modal">
                                                    <option selected>Loading...</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Account</label>
                                                <select name="account" data-object="accounts-name" id="account" data-selected="account-name" class="form-control select-edit-modal">
                                                    <option selected>Loading...</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Name</label>
                                                <input type="text" name="name" class="form-control" id="name" placeholder="Name">
                                            </div>
                                            <div class="form-group">
                                                <label for="address">Address</label>
                                                <input type="text" name="address" class="form-control" id="address" placeholder="Address">
                                            </div>
                                            <div class="form-group">
                                                <label for="phoneNumber">Phone Number</label>
                                                <input type="text" name="phoneNumber" class="form-control" id="phoneNumber" placeholder="Phone Number">
                                            </div>
                                            <div class="form-group">
                                                <label for="contactPerson">Contact Person</label>
                                                <input type="text" name="contactPerson" class="form-control" id="contactPerson" placeholder="Contact Person">
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Email</label>
                                                <input type="email" name="email" class="form-control" id="email" placeholder="Email">
                                            </div>
                                            <div class="form-group">
                                                <label for="remark">Remark</label>
                                                <input type="text" name="remark" class="form-control" id="remark" placeholder="Remark">
                                            </div>
                                        </div>
                                        <input type="hidden" name="id" id="id">
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="customers edit btn btn-flat btn-danger">Update</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="customers pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}