{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script>
        window.module = 'helpdesk/ticket-responses';
        window.field = 'name';
        var columns = [
            'responseFor',
            'staff.fullname',
            'ticket',
            'client.name',
            'message'
        ];
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    <div class="col-md-12 search-area transition">
                        <select data-placeholder="CARI NAMA KATEGORI HELPDESK" class="search-name form-control select2" style="width: 100%;">
                            <option></option>
                        </select>
                    </div>

                    <div class="button-area transition">
                        <a href="JavaScript:Void(0);" data-btn-add="helpdesk/ticket-responses" style="visibility: hidden;" class="clients add-btn h btn btn-flat btn-block btn-danger">Add</a>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="10%">Respon</th>
                            <th width="30%">Nama Staf</th>
                            <th>Tiket</th>
                            <th width="30%">Nama Klien</th>
                            <th>Pesan</th>
                            <th width="5%"><span class="pull-right">Aksi</span></th>
                        </tr>
                        </thead>

                        <tbody data-list="helpdesk/ticket-responses">
                        <tr><td colspan="7">LOADING DATA...</td></tr>
                        </tbody>

                    </table>

                    {#ADD MODAL#}
                    <div data-modal-add="helpdesk/ticket-responses" class="clients add-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Tambah Kategori Helpdesk</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="clients add form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="response">Respon</label>
                                                <select name="responseFor" data-object="helpdesk/ticket-responses#name" class="form-control select-add-modal" id="response">
                                                    <option selected>Loading...</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="staff">Staff</label>
                                                <select name="staff" data-object="helpdesk/staffs#name" class="form-control select-add-modal" id="staff">
                                                    <option selected></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="ticket">Tiket</label>
                                                <select name="ticket" data-object="helpdesk/tickets#name" class="form-control select-add-modal" id="ticket">
                                                    <option selected></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="client">Nama Klien</label>
                                                <select name="client" data-object="clients#name" class="form-control select-add-modal" id="client">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="message">Pesan</label>
                                                <textarea name="message" class="form-control" id="message" placeholder="Pesan"></textarea>
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="clients save btn btn-flat btn-danger">Save</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END ADD MODAL#}

                    {#DETAIL MODAL#}
                    <div data-modal-detail="helpdesk/ticket-responses" class="clients detail-modal modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail Kategori Helpdesk</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="clients detail form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>Respon</label>
                                                <select name="responseFor" data-object="helpdesk/ticket-responses#name" data-selected="responseFor#name" class="form-control select-edit-modal">
                                                    <option selected>Loading...</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Staff</label>
                                                <select name="staff" data-object="helpdesk/staffs#name" data-selected="staff#name" class="form-control select-edit-modal">
                                                    <option selected></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Tiket</label>
                                                <select name="ticket" data-object="helpdesk/tickets#name" data-selected="ticket#name" class="form-control select-edit-modal">
                                                    <option selected></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Nama Klien</label>
                                                <select name="client" data-object="clients#name" data-selected="client#name" class="form-control select-edit-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            </div>
                                                <div class="form-group">
                                                <label for="message">Pesan</label>
                                                <textarea name="message" class="form-control" id="message" placeholder="Pesan"></textarea>
                                        </div>
                                        </div>
                                        <input type="hidden" name="id" id="id">
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="clients edit btn btn-flat btn-danger">Update</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="helpdesk/ticket-responses" class="clients pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}