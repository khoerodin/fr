{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script src="/assets/scripts/helpdesk-tickets.js"></script>

    <script>
        window.module = 'helpdesk/tickets';
        window.field = 'name';
        var columns = [
            'client.name',
            'staff.user.fullname',
            'category.name',
            'title',
            'message'
        ];
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    <div class="col-md-12 search-area transition">
                        <select data-placeholder="CARI NAMA KLIEN" class="search-name form-control select2" style="width: 100%;" width="100%">
                            <option></option>
                        </select>
                    </div>

                    <div class="button-area transition">
                        <a href="JavaScript:Void(0);" data-btn-add="helpdesk/tickets" style="visibility: hidden;" class="clients add-btn h btn btn-flat btn-block btn-danger">Add</a>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th>Nama Klien</th>
                            <th>Staf</th>
                            <th>Kategori</th>
                            <th>Judul</th>
                            <th>Pesan</th>


                            <th width="10%"><span class="pull-right" >Aksi</span></th>
                        </tr>
                        </thead>

                        <tbody id="data-tiket" data-list="helpdesk/tickets">
                        <tr><td colspan="9">LOADING DATA...</td></tr>
                        </tbody>

                    </table>

                    {#MODAL DETAIL PRIORITAS DAN STATUS TIKET#}
                    <div class="modal" id="tiketModal" role="dialog" >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Status dan Prioritas Tiket</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-12">

                                            <div class="box-body">
                                                <div class="row">
                                                    {#Prioritas#}
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="Priority">PRIORITAS</label>
                                                            <select class="form-control ticket-priority" style="width: 100%" >
                                                                <option value="#" disabled selected aria-hidden="true">Pilih salah satu..</option>
                                                                <option value="#">&#xf0fb; &nbsp; KRITIKAL</option>
                                                                <option value="#">&#xf071; &nbsp; SANGAT PENTING</option>
                                                                <option value="#">&#xf06a; &nbsp; PENTING</option>
                                                                <option value="#">&#xf1d8; &nbsp; BIASA</option>
                                                                <option value="#">&#xf197; &nbsp; KURANG PENTING</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    {#Status#}
                                                    <div class="col-md-6">
                                                        <label for="Priority">STATUS</label>
                                                        <select class="form-control ticket-status" style="width: 100%" >
                                                            <option value="#" disabled selected>Pilih salah satu..</option>
                                                            <option value="#">&#xf024; &nbsp; SELESAI</option>
                                                            <option value="#">&#xf1b9; &nbsp; DALAM PROGRESS</option>
                                                            <option value="#">&#xf017; &nbsp; TUNDA</option>
                                                            <option value="#">&#xf06e; &nbsp; REVISI</option>
                                                            <option value="#">&#xf1f8; &nbsp; DIHAPUS</option>
                                                        </select>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-12" >

                                                            <div class="box box-primary direct-chat direct-chat-primary">
                                                                <div class="box-header with-border">
                                                                    <h3 class="box-title">Helpdesk Live Chat</h3>
                                                                    <div class="box-tools pull-right">
                                                                        <span data-toggle="tooltip" title="2 New Messages" class="badge bg-blue">2</span>
                                                                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                                                        <button class="btn btn-box-tool" data-toggle="tooltip" title="Contacts" data-widget="chat-pane-toggle"><i class="fa fa-comments"></i></button>
                                                                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                                                                    </div>
                                                                </div>
                                                                    <div class="box-body">
                                                                    <!-- Conversations are loaded here -->
                                                                    <div class="direct-chat-messages" id="chatHistory">
                                                                        <!-- Message. Default to the left -->
                                                                        <div class="direct-chat-msg">
                                                                            <div class="direct-chat-info clearfix">
                                                                                <span class="direct-chat-name pull-left">{{ me.fullname }}</span>
                                                                                <span class="direct-chat-timestamp pull-right">23 Jan 2:00 pm</span>
                                                                            </div>
                                                                            <!-- /.direct-chat-info -->
                                                                            <img class="direct-chat-img" src="/api/images/{{ image[0] }}?ext={{ image[1] }}" alt="message user image">
                                                                            <!-- /.direct-chat-img -->
                                                                            <div class="direct-chat-text">
                                                                                Hai.. Apa Kabar?
                                                                            </div>
                                                                            <!-- /.direct-chat-text -->
                                                                        </div>
                                                                        <!-- /.direct-chat-msg -->

                                                                    </div>

                                                                    <!--/.direct-chat-messages-->
                                                                    <!-- Contacts are loaded here -->
                                                                    <div class="direct-chat-contacts">
                                                                        <ul class="contacts-list">
                                                                            <li>
                                                                                <a href="#">
                                                                                    <img class="contacts-list-img" src="/img/user1-128x128.jpg" alt="Contact Avatar">
                                                                                    <div class="contacts-list-info">
                                                                                        <span class="contacts-list-name">
                                                                                        Count Dracula
                                                                                        <small class="contacts-list-date pull-right">2/28/2015</small>
                                                                                        </span>
                                                                                        <span class="contacts-list-msg">Cilukba...</span>
                                                                                    </div>
                                                                                    <!-- /.contacts-list-info -->
                                                                                </a>
                                                                            </li>
                                                                            <!-- End Contact Item -->
                                                                        </ul>
                                                                        <!-- /.contacts-list -->
                                                                    </div>
                                                                    <!-- /.direct-chat-pane -->
                                                                </div>
                                                                <!-- /.box-body -->
                                                                <div class="box-footer">
                                                                    <div class="input-group">
                                                                        <input type="text" name="message" placeholder="Type Message ..." class="form-control not-ucase" id="chatMessage" autocomplete="off" maxlength="200">
                                                                        <span class="input-group-btn">
                                                                        <button type="button" class="btn btn-primary btn-flat" id="send">Send</button>
                                                                        </span>
                                                                                                                            </div>
                                                                                                                        </div>
                                                                                                                        <!-- /.box-footer-->
                                                                                                                    </div>
                                                                                                                    <!--/.direct-chat -->

                                                                                                                </div>

                                                    <input type="hidden" name="id" id="id">
                                                </div>
                                            </div>

                                            <!-- /.box-body -->
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>
                    </div>

                    {#ADD MODAL#}
                    <div data-modal-add="helpdesk/tickets" class="clients add-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Tambah Tiket</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="clients add form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>Nama Klien</label>
                                                <select name="client" data-object="clients#name" class="form-control select-add-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Nama Staf</label>
                                                <select name="staff" data-object="helpdesk/staffs#fullname" class="form-control select-add-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Kategori</label>
                                                <select name="category" data-object="helpdesk/categories#name" class="form-control select-add-modal">
                                                    <option selected></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="title">Judul</label>
                                                <input type="text" name="title" class="form-control" id="title" placeholder="Judul">
                                            </div>
                                            <div class="form-group">
                                                <label for="message">Pesan</label>
                                                <textarea name="message" class="form-control" id="message" placeholder="Pesan"></textarea>
                                            </div>

                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="save btn btn-flat btn-danger">Save</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END ADD MODAL#}

                    {#DETAIL MODAL#}
                    <div data-modal-detail="helpdesk/tickets" class="clients detail-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail Tiket</h4>
                                </div>

                                <div class="modal-body">
                                    <form role="form" class="clients detail form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>Nama Klien</label>
                                                <select name="name" data-object="clients#name" data-selected="client#name" class="form-control select-edit-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Nama Staf</label>
                                                <select name="name" data-object="staffs#name" data-selected="staff#name" class="form-control select-edit-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Kategori</label>
                                                <select name="category" data-object="helpdesk/categories#name" data-selected="parent#name" class="form-control select-edit-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="title">Judul</label>
                                                <input type="text" name="title" class="form-control" id="title" placeholder="Judul">
                                            </div>
                                            <div class="form-group">
                                                <label for="message">Pesan</label>
                                                <textarea name="message" class="form-control" id="message" placeholder="Pesan"></textarea>
                                            </div>

                                        </div>
                                        <input type="hidden" name="id" id="id">
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="edit btn btn-flat btn-danger">Update</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="helpdesk/tickets" class="pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}