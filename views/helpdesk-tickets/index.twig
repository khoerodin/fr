{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script src="/assets/scripts/helpdesk-tickets.js"></script>

    <link rel="stylesheet" type="text/css" href="http://www.prepbootstrap.com/Content/shieldui-lite/dist/css/light/all.min.css" />
    <script type="text/javascript" src="http://www.prepbootstrap.com/Content/shieldui-lite/dist/js/shieldui-lite-all.min.js"></script>

    <script>
        window.module = 'helpdesk/tickets';
        window.field = 'name';
        var columns = [
            'client.name',
            'staff.user.fullname',
            'category.name',
            'title',
            'message'
        ];
    </script>

{% endblock %}

{%- block content -%}

    <input type="hidden" id="currentUser" value="{{ me.id }}">

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    <div class="col-md-12 search-area transition">

                        <select data-placeholder="CARI NAMA KLIEN" class="search-name form-control select2" style="width: 100%;" width="100%">
                            <option></option>
                        </select>
                    </div>

                    <div class="button-area transition">
                        <a href="JavaScript:Void(0);" data-btn-add="helpdesk/tickets" style="visibility: hidden;" class="clients add-btn h btn btn-flat btn-block btn-danger">Add</a>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <!-- /.nav-tabs -->
                    <ul class="nav nav-pills-tic nav-justified nav-tabs-justified">
                        <li class="nav-item">
                            <a data-toggle="tab" class="nav-link active bg-success" href="#semuaTiket"><h3>All Tickets &nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-id-card-o" aria-hidden="true"></i></h3></a>
                        </li>
                        <li class="nav-item">
                            <a data-toggle="tab" class="nav-link bg-warning" href="#myTicket"><h3>My Tickets &nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-flag" aria-hidden="true"></i></h3></a>
                        </li>
                        <li class="nav-item">
                            <a data-toggle="tab" class="nav-link bg-danger" href="#statusPrioritasTiket"><h3>Status & Priority &nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-users" aria-hidden="true"></i></h3></a>
                        </li>
                        <li class="nav-item">
                            <a data-toggle="tab" class="nav-link bg-info" href="#statistikTiket"><h3>Statistics &nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-bar-chart" aria-hidden="true"></i></h3></a>
                        </li>
                        <li class="nav-item">
                            <a data-toggle="tab" class="nav-link bg-red-gradient" href="/helpdesk/ticket-responses" target="_blank" style="text-align: center"><h3><span class="glyphicon glyphicon-hand-right pull-left"></span>LIVE CHAT HELPDESK<span class="glyphicon glyphicon-hand-left pull-right"></span></h3></a>
                        </li>
                    </ul>

                    <!-- .tab-contents -->
                    <div class="tab-content">
                        <div id="semuaTiket" class="tab-pane fade in active">

                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th width="5%">#</th>
                                    <th>Nama Klien</th>
                                    <th>Staf</th>
                                    <th>Kategori</th>
                                    <th>Judul</th>
                                    <th width="30%">Pesan</th>


                                    <th width="8%"><span class="pull-right" >Aksi</span></th>
                                </tr>
                                </thead>

                                <tbody data-list="helpdesk/tickets">
                                <tr><td colspan="9">LOADING DATA...</td></tr>
                                </tbody>

                            </table>

                        </div>

                        <div id="myTicket" class="tab-pane fade">

                            {#MY TIKET ISI DISINI#}
                        </div>

                        <div id="statusPrioritasTiket" class="tab-pane fade">
                            <br><br><br>
                            <div class="col-sm-12">

                                <div class="row">

                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h3>STATUS :</h3>
                                            <div class="row">

                                                <div class="col-md-2">
                                                    <div class="well wellBaru" style="background-color: lightyellow;">
                                                        <h4 class="text-orange"><i class="fa fa-exclamation-circle fa-5x" aria-hidden="true"></i><span class="badge pull-right">78</span><br> NEW !</h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="well wellonProg" style="background-color: lightpink">
                                                        <h4 class="text-danger"><i class="fa fa-car fa-5x" aria-hidden="true"></i><span class="badge pull-right">9</span><br>In Progress </h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="well wellTunda" style="background-color: lightgray">
                                                        <h4 class=""><i class="fa fa-clock-o fa-5x" aria-hidden="true"></i><span class="badge pull-right">3</span><br> Pending/Postponed </h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="well wellRevisi" style="background-color: lightblue">
                                                        <h4 class="text-primary"><i class="fa fa-eye fa-5x" aria-hidden="true"></i><span class="badge pull-right">1</span><br> Revisioned </h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="well wellHapus" style="background-color: lightgrey">
                                                        <h4 class="text-black"><i class="fa fa-trash fa-5x" aria-hidden="true"></i><span class="badge pull-right">5</span><br> Deleted </h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2 ">
                                                    <div class="well wellSelesai" style="background-color: palegreen">
                                                        <h4 class="text-success"><i class="fa fa-anchor fa-5x" aria-hidden="true"></i><span class="badge pull-right">15</span><br> Done </h4>
                                                    </div>
                                                </div>


                                            </div><!--/row-->

                                            <h3>PRIORITY :</h3>
                                            <div class="row">

                                                <div class="col-md-2 ">
                                                    <div class="well wellblmDiket">
                                                        <h4 class="text-success"><i class="fa fa-question-circle fa-5x" aria-hidden="true"></i><span class="label label-success pull-right">19</span><br> Undefined </h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="well wellKritikal">
                                                        <h4 class="text-orange"><i class="fa fa-rocket fa-5x" aria-hidden="true"></i><span class="label label-success pull-right">43</span><br> Critical</h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="well wellsgtPenting">
                                                        <h4 class="text-danger"><i class="fa fa-fighter-jet fa-5x" aria-hidden="true"></i><span class="label label-danger pull-right">81</span><br> Very Important </h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="well wellPenting">
                                                        <h4 class=""><i class="fa fa-plane fa-5x" aria-hidden="true"></i><span class="label label-success pull-right">3</span><br> Important </h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="well wellBiasa">
                                                        <h4 class="text-primary"><i class="fa fa-motorcycle fa-5x" aria-hidden="true"></i><span class="label label-primary pull-right">21</span><br> Normal </h4>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="well wellkrgPenting">
                                                        <h4 class="text-black"><i class="fa fa-bath fa-5x" aria-hidden="true"></i><span class="label label-success pull-right">24</span><br> Not Important </h4>
                                                    </div>
                                                </div>

                                            </div><!--/row-->
                                        </div><!--/col-12-->
                                    </div><!--/row-->

                                </div>

                            </div>


                        </div>

                        <!--statistik-->
                        <div id="statistikTiket" class="tab-pane fade">

                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <canvas id="myChart"></canvas>
                                            </div>
                                        </div>
                                    </div>

                        </div>
                        <!--./statistik-->

                    </div>
                    <!--./end content-->


                    {#MODAL FORUM#}
                    <div class="modal" id="tiketModal" role="dialog">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Forum Helpdesk</h4>
                                </div>
                                <div class="modal-body" data-ticketid="" data-clientid="" data-staffid="" style="min-height: 500px;">

                                    <div class="row">

                                        <div class="col-sm-4">
                                            <div class="row">
                                            <ul class="list-group">
                                                <li class="list-group-item">Nama Client <span class="pull-right">: </span></li>
                                                <li class="list-group-item">Judul <span class="pull-right">: </span> </li>
                                                <li class="list-group-item">Kategori <span class="pull-right">: </span> </li>
                                                <li class="list-group-item">Diposting tanggal <span class="pull-right">: </span> </li>
                                                {#<a href="/helpdesk/ticket-responses" class="list-group-item list-group-item-info" target="_blank"><span class="glyphicon glyphicon-hand-right pull-left"></span><span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;CLICK TO CHAT WITH US</span><span class="glyphicon glyphicon-hand-left pull-right"></span></a>#}
                                            </ul>
                                            </div>
                                        </div>

                                        <div class="col-sm-8">
                                            <div class="row">
                                            <ul class="list-group listDetail">

                                                <li class="list-group-item list-client"></li>
                                                <li class="list-group-item list-judul"></li>
                                                <li class="list-group-item list-cat"></li>
                                                <li class="list-group-item list-post-date"></li>
                                            </ul>
                                            </div>
                                        </div>

                                        <div class="col-md-12">

                                            <div class="box-body tableForum"></div>
                                            <!-- /.box-body -->
                                        </div>

                                    </div>


                                </div>
                                <div class="modal-footer">

                                        <div class="input-group">

                                                <textarea name="message" placeholder="Ketik balasan Anda ..." class="form-control not-ucase" id="replyMessage" autocomplete="off" maxlength="15000" cols="150" rows="4"></textarea>

                                        </div>

                                    <br>
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-primary btn-flat btn-reply-tic">Send</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                    </div>
                            </div>

                        </div>
                    </div>

                    {#ADD MODAL#}
                    <div data-modal-add="helpdesk/tickets" class="clients add-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Tambah Tiket</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="clients add form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>Nama Klien</label>
                                                <select name="client" data-object="clients#name" class="form-control select-add-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Nama Staf</label>
                                                <select name="staff" data-object="helpdesk/staffs#fullname" class="form-control select-add-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Kategori</label>
                                                <select name="category" data-object="helpdesk/categories#name" class="form-control select-add-modal">
                                                    <option selected></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="title">Judul</label>
                                                <input type="text" name="title" class="form-control" id="title" placeholder="Judul">
                                            </div>
                                            <div class="form-group">
                                                <label for="message">Pesan</label>
                                                <textarea name="message" class="form-control" id="message" placeholder="Pesan"></textarea>
                                            </div>

                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="save btn btn-flat btn-danger">Save</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END ADD MODAL#}

                    {#DETAIL MODAL#}
                    <div data-modal-detail="helpdesk/tickets" class="clients detail-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail Tiket</h4>
                                </div>

                                <div class="modal-body">
                                    <form role="form" class="clients detail form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label>Nama Klien</label>
                                                <select name="name" data-object="clients#name" data-selected="client#name" class="form-control select-edit-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Nama Staf</label>
                                                <select name="name" data-object="staffs#name" data-selected="staff#name" class="form-control select-edit-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Kategori</label>
                                                <select name="category" data-object="helpdesk/categories#name" data-selected="parent#name" class="form-control select-edit-modal">
                                                    <option></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="title">Judul</label>
                                                <input type="text" name="title" class="form-control" id="title" placeholder="Judul">
                                            </div>
                                            <div class="form-group">
                                                <label for="message">Pesan</label>
                                                <textarea name="message" class="form-control" id="message" placeholder="Pesan"></textarea>
                                            </div>

                                        </div>
                                        <input type="hidden" name="id" id="id">
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="edit btn btn-flat btn-danger">Update</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="helpdesk/tickets" class="pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}