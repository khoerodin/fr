{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script src="/assets/scripts/helpdesk-tickets.js"></script>
    <script>
        window.module = 'helpdesk/tickets';
        window.field = 'name';
        var columns = [
            'client.fullname',
            'staff.user.fullname',
            'category.name',
            'title',
            'message',
            'priority',
            'status',
            'createdAt'
        ];
//        tr += '<td>'+moment(value.createdAt).format('LLLL')+'</td>'
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row"></div>
                <!-- /.box-header -->
                <div class="box-body">

                    <button type="button" class="btn btn-danger pull-right add-modal btn-flat" data-toggle="modal" data-target="#closedTicketModal" role="dialog" style="width: 150px">CLOSED TICKETS</button>

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th>Client</th>
                            <th>Staff</th>
                            <th>Kategori</th>
                            <th>Title</th>
                            <th>Message</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th width="15%">Created At</th>
                            <th width="7%"><span class="pull-right">Action</span></th>
                        </tr>
                        </thead>

                        <tbody data-list="helpdesk/tickets">
                        <tr><td colspan="10">LOADING DATA...</td></tr>
                        </tbody>

                    </table>

                    <div class="modal fade" id="tiketModal" role="dialog">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">HELPDESK FORUM</h4>
                                </div>
                                <div class="modal-body"> <!-- start modal -->

                                    <div class="row">
                                        <div class="col-md-12" >

                                            {#detail tic inside modal forum#}
                                            <div class="row">
                                                <div class="col-sm-2">
                                                    <div class="row">
                                                        <ul class="list-group">
                                                            <li class="list-group-item">Nama Klien<span class="pull-right">: </span></li>
                                                            <li class="list-group-item">Kategori<span class="pull-right">: </span></li>
                                                            <li class="list-group-item">Judul<span class="pull-right">: </span></li>
                                                            <li class="list-group-item">Pesan<span class="pull-right">: </span></li>
                                                            <li class="list-group-item">Tanggal Tiket<span class="pull-right">: </span></li>

                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="col-sm-10">
                                                    <div class="row">
                                                        <ul class="list-group listDetail">

                                                            <li class="list-group-item list-client">-</li>
                                                            <li class="list-group-item list-cat">-</li>
                                                            <li class="list-group-item list-title">-</li>
                                                            <li class="list-group-item list-msg">-</li>
                                                            <li class="list-group-item list-tgl-post">-</li>

                                                            <input type="hidden" value="oijijijhijh">

                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="well well-sm" align="center"><span class="fa fa-hand-o-down pull-left"></span><b>Selamat Datang di Forum Helpdesk!</b><span class="fa-hand-o-down pull-right"></span></div>

                                            <div class="box direct-chat">

                                                <div class="box-body">
                                                    <!-- Conversations are loaded here -->
                                                    <div class="direct-chat-messages" id="chatHistory">
                                                        <!-- Message. Default to the left -->
                                                        <div class="direct-chat-msg">
                                                            <div class="direct-chat-info clearfix">
                                                                <span class="direct-chat-name pull-left">{{ me.fullname }}</span>
                                                                <span class="wkt direct-chat-timestamp pull-right"></span>
                                                            </div>
                                                            <!-- /.direct-chat-info -->
                                                            <img class="direct-chat-img" src="/api/images/{{ image[0] }}?ext={{ image[1] }}" alt="message user image">
                                                            <!-- /.direct-chat-img -->
                                                            <div class="direct-chat-text">
                                                                Selamat datang di Helpdesk Si JAGO. Jika ada hal yang ingin ditanyakan terkait layanan kami, jangan sungkan untuk bertanya melalui live chat kami :)
                                                            </div>
                                                            <!-- /.direct-chat-text -->
                                                        </div>
                                                        <!-- /.direct-chat-msg -->

                                                    </div>

                                                    <!--/.direct-chat-messages-->

                                                </div>
                                                <!-- /.box-body -->
                                                <div class="col-sm-12">
                                                    <div id="typing_on" class="clearfix text-muted visible-lg"></div>
                                                </div>
                                                <div class="box-footer">
                                                    <div class="input-group">
                                                        <input type="text" name="message" placeholder="Ketik pesan Anda ..." class="form-control not-ucase" id="chatMessage" autocomplete="off" maxlength="200" style="width: 99%">
                                                        <span class="input-group-btn">
                                                        &nbsp;<button type="button" class="btn btn-primary btn-flat" id="send">Send</button>
                                                        </span>
                                                    </div>
                                                </div>
                                                <!-- /.box-footer-->
                                            </div>
                                            <!--/.direct-chat -->
                                        </div>

                                        <input type="hidden" name="id" id="id">
                                    </div>

                                </div> <!-- end modal -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>


                    {#DETAIL MODAL KONFIRMASI TIKET#}
                    <div class="modal" role="dialog" id="confirm-tic">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Ambil Tiket</h4>
                                </div>
                                <div class="modal-body">
                                    <form id="formKonfirmasiTiket">
                                        <div class="box-body row">


                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="judul">Staff</label>
                                                    <select name="staff" class="form-control" id="staff" style="width: 100%"></select>
                                                </div>
                                            </div>

                                        </div>
                                        <input type="hidden" name="id" id="id">
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="edit btn btn-flat btn-danger" id="assign-tic">Assign Ticket</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                    {#DETAIL MODAL --- CLOSED TICKET#}
                    <div class="modal fade" id="closedTicketModal" role="dialog">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Tambah Tiket</h4>
                                </div>

                                <div class="modal-body">


                                </div>

                                <div class="modal-footer">
                                    <div class="col-sm-12">
                                        <div class="row">
                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-danger btn-flat" id="btnSave">save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="clients" class="clients pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}