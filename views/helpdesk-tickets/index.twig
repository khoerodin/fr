{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script src="/assets/scripts/helpdesk-tickets.js"></script>
    <script>
        window.module = 'helpdesk/tickets';
        window.field = 'name';
        var columns = [
            'client.fullname',
            'staff.user.fullname',
            'title',
            'message',
            'priority',
            'status',
            'createdAt'
        ];
//        tr += '<td>'+moment(value.createdAt).format('LLLL')+'</td>'
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    {#<div class="col-md-12 search-area transition">#}
                        {#<select data-placeholder="CARI NAMA CLIENT" class="search-name form-control select2" style="width: 100%;">#}
                            {#<option></option>#}
                        {#</select>#}
                    {#</div>#}

                    {#<div class="button-area transition">#}
                        {#<a href="JavaScript:Void(0);" data-btn-add="clients" style="visibility: hidden;" class="clients add-btn h btn btn-flat btn-block btn-danger">Add</a>#}
                    {#</div>#}
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th>Client</th>
                            <th>Staff</th>
                            <th>Title</th>
                            <th>Message</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th width="15%">Created At</th>
                            <th width="7%"><span class="pull-right">Action</span></th>
                        </tr>
                        </thead>

                        <tbody data-list="helpdesk/tickets">
                        <tr><td colspan="9">LOADING DATA...</td></tr>
                        </tbody>

                    </table>

                    <div class="modal fade" id="tiketModal" role="dialog">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">HELPDESK FORUM</h4>
                                </div>
                                <div class="modal-body"> <!-- start modal -->

                                    <div class="row">
                                        <div class="col-md-12" >

                                            <div class="box direct-chat">

                                                    {#<div class="box-tools pull-right">#}
                                                        {#<span data-toggle="tooltip" title="2 New Messages" class="badge badge-notif bg-blue">2</span>#}
                                                        {#<button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>#}
                                                        {#<button class="btn btn-box-tool" data-toggle="tooltip" title="Contacts" data-widget="chat-pane-toggle"><i class="fa fa-comments"></i></button>#}
                                                        {#<button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>#}
                                                    {#</div>#}

                                                <div class="box-body">
                                                    <!-- Conversations are loaded here -->
                                                    <div class="direct-chat-messages" id="chatHistory">
                                                        <!-- Message. Default to the left -->
                                                        <div class="direct-chat-msg">
                                                            <div class="direct-chat-info clearfix">
                                                                <span class="direct-chat-name pull-left">{{ me.fullname }}</span>
                                                                <span class="wkt direct-chat-timestamp pull-right"></span>
                                                            </div>
                                                            <!-- /.direct-chat-info -->
                                                            <img class="direct-chat-img" src="/api/images/{{ image[0] }}?ext={{ image[1] }}" alt="message user image">
                                                            <!-- /.direct-chat-img -->
                                                            <div class="direct-chat-text">
                                                                Selamat datang di Helpdesk Si JAGO. Jika ada hal yang ingin ditanyakan terkait layanan kami, jangan sungkan untuk bertanya melalui live chat kami :)
                                                            </div>
                                                            <!-- /.direct-chat-text -->
                                                        </div>
                                                        <!-- /.direct-chat-msg -->

                                                    </div>

                                                    <!--/.direct-chat-messages-->

                                                </div>
                                                <!-- /.box-body -->
                                                <div class="col-sm-12">
                                                    <div id="typing_on" class="clearfix text-muted visible-lg"></div>
                                                </div>
                                                <div class="box-footer">
                                                    <div class="input-group">
                                                        <input type="text" name="message" placeholder="Ketik pesan Anda ..." class="form-control not-ucase" id="chatMessage" autocomplete="off" maxlength="200" style="width: 99%">
                                                        <span class="input-group-btn">
                                                        &nbsp;<button type="button" class="btn btn-primary btn-flat" id="send">Send</button>
                                                        </span>
                                                    </div>
                                                </div>
                                                <!-- /.box-footer-->
                                            </div>
                                            <!--/.direct-chat -->
                                        </div>

                                        <input type="hidden" name="id" id="id">
                                    </div>

                                </div> <!-- end modal -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>


                    {#DETAIL MODAL KONFIRMASI TIKET#}
                    <div class="modal" role="dialog" id="confirm-tic">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Ambil Tiket</h4>
                                </div>
                                <div class="modal-body">
                                    <form id="formKonfirmasiTiket">
                                        <div class="box-body row">


                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="judul">Staff</label>
                                                    <select name="staff" class="form-control" id="staff" style="width: 100%"></select>
                                                </div>
                                            </div>

                                        </div>
                                        <input type="hidden" name="id" id="id">
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="edit btn btn-flat btn-danger" id="assign-tic">Assign Ticket</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="clients" class="clients pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}