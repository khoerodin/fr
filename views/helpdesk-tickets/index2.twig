{% extends 'layout.twig' %}

{% block js %}
    <script type="text/javascript" src="/assets/scripts/Bisnis.js"></script>
    <script type="text/javascript" src="/assets/scripts/Util/Style.js"></script>
    <script type="text/javascript" src="/assets/scripts/Util/Dialog.js"></script>
    <script type="text/javascript" src="/assets/scripts/Helpdesk/Ticket.js"></script>
    <script type="text/javascript" src="/assets/scripts/Helpdesk/Staff.js"></script>
    <script type="text/javascript">
        Bisnis.init(Bisnis.Helpdesk.Staff.fetchByUser('{{ me.id }}', function (staff) {
            if (0 < staff.length) {
                Bisnis.store('staff', JSON.stringify(staff[0]));
                Bisnis.Helpdesk.Ticket.fetchByStaff(staff[0].id);
            }
        }));

        Bisnis.bind('click', '.allTickets', function () {
            var savedStaff = JSON.parse(Bisnis.fetch('staff'));
            if (null === savedStaff || 'undefined' === typeof savedStaff) {
                Bisnis.Helpdesk.Staff.fetchByUser('{{ me.id }}', function (staff) {
                    if (0 < staff.length) {
                        Bisnis.Helpdesk.Ticket.fetchClosable({
                            'category.id': staff[0].category.id
                        }, '#allTicketList');
                    }
                });
            } else {
                Bisnis.Helpdesk.Ticket.fetchClosable({
                    'category.id': savedStaff.category.id
                }, '#allTicketList');
            }
        });

        Bisnis.bind('click', '.closedTickets', function () {
            var savedStaff = JSON.parse(Bisnis.fetch('staff'));
            if (null === savedStaff || 'undefined' === typeof savedStaff) {
                Bisnis.Helpdesk.Staff.fetchByUser('{{ me.id }}', function (staff) {
                    if (0 < staff.length) {
                        Bisnis.Helpdesk.Ticket.fetchClosed({
                            'category.id': staff[0].category.id
                        }, '#closedTicketList');
                    }
                });
            } else {
                Bisnis.Helpdesk.Ticket.fetchClosed({
                    'category.id': savedStaff.category.id
                }, '#closedTicketList');
            }
        });

        Bisnis.bind('click', '.assignToMe', function () {
            var savedStaff = JSON.parse(Bisnis.fetch('staff'));
            if (null === savedStaff || 'undefined' === typeof savedStaff) {
                Bisnis.Helpdesk.Staff.fetchByUser('{{ me.id }}', function (staff) {
                    if (0 < staff.length) {
                        Bisnis.Helpdesk.Ticket.fetchByStaff(staff[0].id);
                    }
                });
            } else {
                Bisnis.Helpdesk.Ticket.fetchByStaff(savedStaff.id);
            }
        });

        Bisnis.bind('click', '.assign', function () {
            var that = this;

            Bisnis.store('ticketId', Bisnis.getData(that, 'ticket-id'));

            Bisnis.Helpdesk.Staff.fetchByCategory(Bisnis.getData(that, 'ticket-category-id'), function (staffList) {
                var staffOption = '<option selected disabled class="text-muted">PILIH STAFF YANG AKAN DITUGASKAN</option>';
                Bisnis.each(function (index, value) {
                    staffOption = staffOption + '<option value="/api/helpdesk/staffs/' + value.id + '">' + value.fullname + '</option>';
                }, staffList);

                Bisnis.putHtml('#staff', staffOption);
                Bisnis.modifySelect('#staff');
            });

            Bisnis.showModal('.ticketAssignment');
        });

        Bisnis.bind('click', '.detail', function () {
            var that = this;
            Bisnis.store('ticketId', Bisnis.getData(that, 'ticket-id'));
            Bisnis.Helpdesk.Ticket.markRead(Bisnis.fetch('ticketId'), function () {
                Bisnis.Helpdesk.Ticket.viewByTicket(Bisnis.fetch('ticketId'));
                Bisnis.showModal('#tiketDetail');
            });
        });

        Bisnis.bind('click', '#sendResponse', function () {
            var ticketId = Bisnis.fetch('ticketId');
            Bisnis.Helpdesk.Ticket.fetch(ticketId, function (ticket) {
                var message = Bisnis.getValue('#chatMessage');
                var staffId = ticket.staff.id;
                Bisnis.Helpdesk.Staff.fetchByUser('{{ me.id }}', function (staff) {
                    if (0 < staff.length) {
                        staffId = staff[0].id;
                    }

                    Bisnis.Helpdesk.Ticket.sendReponse([
                        { name: 'ticket', value: '/api/helpdesk/tickets/' + ticketId },
                        { name: 'staff', value: '/api/helpdesk/staffs/' + staffId },
                        { name: 'message', value: message }
                    ], function () {
                        Bisnis.putHtml('#chatHistory', '');
                        Bisnis.Helpdesk.Ticket.viewByTicket(ticketId);
                        Bisnis.setValue('#chatMessage', '');
                    });
                });
            });
        });

        Bisnis.bind('click', '#assignTo', function () {
            var staff = Bisnis.getValue('#staff');
            var ticket = Bisnis.fetch('ticketId');

            if ('' === staff || '' === ticket || null === staff || null === ticket) {
                console.log('invalid assignment');
            } else {
                Bisnis.Helpdesk.Ticket.assignTo(ticket, staff, function () {
                    Bisnis.hideModal('.ticketAssignment');
                    Bisnis.click('#ticketTab .active');
                });
            }
        });

        Bisnis.bind('click', '#closeModalDetail', function () {
            Bisnis.click('#ticketTab .active');
        });
        
        Bisnis.bind('click', '.closeTicket', function () {
            var that = this;
            var ticketId = Bisnis.getData(that, 'ticket-id');
            Bisnis.Util.Dialog.yesNo('Konfirmasi', 'Anda yakin akan menutup tiket?', function (result) {
                if (result) {
                    Bisnis.Helpdesk.Ticket.close(ticketId);
                    Bisnis.click('#ticketTab .active');
                }
            });
        });
    </script>
{% endblock %}

