{%- spaceless -%}
    <header class="main-header">
        <!-- Logo -->
        <a href="/" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>JGO</b></span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>SI</b>JAGO</span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <li class="dropdown messages-menu notification">
                    </li>
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <label class="avatar-img user-image"
                                  style="background-image: url('/api/images/{{ image[0] }}?ext={{ image[1] }}');"
                            ></label>
                            <span class="hidden-xs">{{- me.fullname | raw -}}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">

                                <label class="avatar-img big-avatar"
                                       style="background-image: url('/api/images/{{ image[0] }}?ext={{ image[1] }}');"
                                ></label>

                                <p>
                                    {{- me.fullname | raw }}
                                </p>
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="/profile" class="btn btn-primary btn-flat"><i class="fa fa-user-circle-o"></i> Profile</a>
                                </div>
                                <div class="pull-right">
                                    <button class="btn btn-danger btn-flat" id="sign-out"><i class="fa fa-sign-out"></i> Logout</button>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="modal fade" id="notificationModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Notifikasi</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered table-hover tableTicket">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Topik</th>
                                    <th>Pesan</th>
                                    <th>Aksi</th>
                                </tr>
                                </thead >
                                <tbody id="notificationBody">
                                <tr>
                                    <td colspan="5">LOADING DATA...</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-danger" id="notificationReadAll">Tandai Telah Dibaca</button>
                                <button type="button" class="btn btn-default" id="notificationClose">Tutup</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="notificationDetail" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title notificationDetailTitle"></h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 notificationDetailBody"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default" id="notificationDetailClose">Tutup</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%- endspaceless -%}