{%- spaceless -%}
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            {#<div class="user-panel">
                <div class="pull-left image">
                    <img src="/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>{{- me.username | raw -}}</p>
                    {{- me.fullname|striptags|length > 18 ? me.fullname|striptags|slice(0, 18) ~ '...' : me.fullname|striptags -}}
                </div>
            </div>#}

            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="treeview active hidden">
                    <a href="javascript:void(0)" data-catagory="administration">
                        <i class="fa fa-files-o"></i>
                        <span>ADMIN</span>
                    </a>
                    <ul class="treeview-menu">
                        {%- for menu in menus['hydra:member'] -%}
                            {%- if
                            (
                                menu.module.path|replace({'/api/': ''}) == 'users' or
                                menu.module.path|replace({'/api/': ''}) == 'clients' or
                                menu.module.path|replace({'/api/': ''}) == 'user-activities' or
                                menu.module.path|replace({'/api/': ''}) == 'modules'
                            )
                            and menu.viewable != false
                            -%}
                        <li>
                            <a href="/{{- menu.module.path|replace({'/api/': ''}) -}}">
                                <i class="fa fa-circle-o"></i>
                                {{- menu.module.name -}}
                            </a>
                        </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </li>
                <li class="treeview active hidden">
                    <a href="javascript:void(0)" data-catagory="advertising">
                        <i class="fa fa-file-image-o"></i>
                        <span>ADVERTISING</span>
                    </a>

                    <ul class="treeview-menu">
                        <li class="treeview active">
                            <a href="javascript:void(0)" data-category="advertising"><i class="fa fa-circle-o"></i> MASTER
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                {%- for menu in menus['hydra:member'] -%}
                                        {%- if
                                    (
                                    menu.module.path|replace({'/api/': ''}) == 'advertising/ads' or
                                    menu.module.path|replace({'/api/': ''}) == 'advertising/categories' or
                                    menu.module.path|replace({'/api/': ''}) == 'advertising/layouts' or
                                    menu.module.path|replace({'/api/': ''}) == 'advertising/positions' or
                                    menu.module.path|replace({'/api/': ''}) == 'advertising/payment-methods' or
                                    menu.module.path|replace({'/api/': ''}) == 'advertising/specifications' or
                                    menu.module.path|replace({'/api/': ''}) == 'advertising/specification-details' or
                                    menu.module.path|replace({'/api/': ''}) == 'advertising/types'
                                    )
                                    and menu.viewable != false
                                    -%}
                                        <li>
                                            <a href="/{{- menu.module.path|replace({'/api/': ''}) -}}">
                                                <i class="fa fa-circle-o"></i>
                                                {{- menu.module.name -}}
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
{%- endspaceless -%}
