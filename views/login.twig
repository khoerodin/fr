                <span class="has-error hidden" id="login-error"><p class="help-block">PLEASE ENTER VALID CREDENTIALS</p></span>
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="button" class="btn btn-danger btn-block btn-flat" id="sign-in">SIGN IN</button>
                </div>
