{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/Admin/Modules.js"></script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row" style="margin-bottom: 0px;">
                    <div class="col-md-10">
                        <select class="form-control" id="searchBanks" style="width: 100%"></select>
                    </div>
                    <div class="col-md-2">
                        <button disabled id="btnAddBank" class="btn btn-danger btn-flat btn-block">TAMBAH</button>
                    </div>
                </div>
                <div class="box-body">

                    <div class="panel with-nav-tabs panel-info">
                        <div class="panel-heading">
                            <ul id="serviceTab" class="nav nav-tabs" role="tablist">
                                {% for service in services %}
                                    <li class="{% if loop.index == 1 %}active{% endif %}">
                                        <a href="#{{ service.id }}" aria-controls="{{ service.id }}" role="tab" data-toggle="tab">{{ service.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>

                        <div class="panel-body">
                            <div class="tab-content">

                                {% for service in services %}
                                    <div role="tabpanel" class="tab-pane {% if loop.index == 1 %}active{% endif %}" id="{{ service.id }}">
                                        <table class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th width="3%">NO</th>
                                                <th width="20%">Nama</th>
                                                <th width="20%">Grup</th>
                                                <th>Path</th>
                                                <th width="7%">Menu Display</th>
                                                <th width="5%"><span class="pull-right">Action</span></th>
                                            </tr>
                                            </thead>

                                            <tbody></tbody>

                                        </table>
                                    </div>
                                {% endfor %}

                            </div>
                        </div>
                    </div>

                </div>
                <div class="box-footer clearfix">
                    <ul id="modulesPagination" class="pagination pagination-sm pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}