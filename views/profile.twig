{% extends 'layout.twig' %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <div class="box-body">

                    <div class="col-md-2">
                        <img class="profile-user-img img-responsive img-circle" src="/img/user2-160x160.jpg" alt="User profile picture">
                        {{ msg }}
                    </div>

                    <div class="col-md-10">
                        <div class="tab-pane" id="settings">
                            <form class="form-horizontal" action="/save-profile" method="post">
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Fullname</label>

                                    <div class="col-sm-10">
                                        <input type="text" name="fullname" value="{{- me.fullname | raw -}}" class="form-control" id="inputName" placeholder="Fullname">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail" class="col-sm-2 control-label">Email</label>

                                    <div class="col-sm-10">
                                        <input type="email" name="email" value="{{- me.email | raw -}}" class="form-control" id="inputEmail" placeholder="Email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Username" class="col-sm-2 control-label">Username</label>

                                    <div class="col-sm-10">
                                        <input type="text" readonly name="username" value="{{- me.username | raw -}}"  class="form-control" id="Username" placeholder="Username">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="NewPassword" class="col-sm-2 control-label">New Password</label>

                                    <div class="col-sm-10">
                                        <input type="password" name="plain_password" class="form-control" id="NewPassword" placeholder="Leave blank if dont want to change">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="roles" class="col-sm-2 control-label">Roles</label>

                                    <div class="col-sm-10">
                                        <ul class="list-group" id="roles">
                                            {% for role in me.roles %}
                                            <li class="list-group-item">{{ role }}</li>
                                            {% endfor %}
                                            <li class="list-group-item">ROLE_OTHER</li>
                                            <li class="list-group-item">ROLE_OTHER_OF_OTHER</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-flat btn-danger">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
{%- endblock -%}