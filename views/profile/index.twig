{% extends 'layout.twig' %}

{%- block js -%}
    <script src="/assets/scripts/Admin/Modules.js"></script>
    <script src="/assets/scripts/Admin/Roles.js"></script>
    <script src="/assets/scripts/Admin/Users.js"></script>
    <script src="/assets/scripts/Admin/Profile.js"></script>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
{%- endblock -%}

{%- block content -%}

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <div class="box-body">

                    <div class="col-md-2">
                        <label for="file-image" id="profile-image" class="profile-image avatar-img"
                               style="background-image: url('/api/images/{{ image[0] }}?ext={{ image[1] }}');"
                               title="KLIK UNTUK MENGGANTI FOTO" data-toggle="tooltip" data-placement="bottom"></label>
                        <input id="file-image" type="file"/>
                    </div>

                    <div class="col-md-10">
                        <div class="tab-pane" id="settings">
                            <form class="form-horizontal" id="form-profile">
                                <input type="hidden" name="imageExtension">
                                <input type="hidden" name="imageString">
                                <div class="form-group">
                                    <label for="fullname" class="col-sm-2 control-label">NAMA LENGKAP</label>

                                    <div class="col-sm-10">
                                        <input type="text" name="fullname" value="{{- me.fullname | raw -}}" class="form-control" id="fullname">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email" class="col-sm-2 control-label">Email</label>

                                    <div class="col-sm-10">
                                        <input type="email" name="email" value="{{- me.email | raw -}}" class="form-control" id="email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="username" class="col-sm-2 control-label">Username</label>

                                    <div class="col-sm-10">
                                        <input type="text" readonly value="{{- me.username | raw -}}"  class="form-control" id="username">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="plainPassword" class="col-sm-2 control-label">Sandi</label>

                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="plainPassword" placeholder="KOSONGKAN JIKA TIDAK DIUBAH">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-1">
                                        <button type="button" id="update-profile" class="btn btn-flat btn-block btn-danger">SIMPAN</button>
                                    </div>
                                </div>
                            </form>
                            <input type="hidden" id="userId" value="{{- me.id -}}">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
{%- endblock -%}