{% extends 'layout.twig' %}

{%- block js -%}
    <script src="/assets/scripts/profile.js"></script>
{%- endblock -%}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <div class="box-body">

                    <div class="col-md-2">
                        <img class="profile-user-img img-responsive img-circle" src="/img/user2-160x160.jpg" alt="User profile picture">
                    </div>

                    <div class="col-md-10">
                        <div class="tab-pane" id="settings">
                            <form class="form-horizontal" id="form-profile">
                                <div class="form-group">
                                    <label for="fullname" class="col-sm-2 control-label">Fullname</label>

                                    <div class="col-sm-10">
                                        <input type="text" name="fullname" value="{{- me.fullname | raw -}}" class="form-control" id="fullname" placeholder="FULLNAME">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email" class="col-sm-2 control-label">Email</label>

                                    <div class="col-sm-10">
                                        <input type="email" name="email" value="{{- me.email | raw -}}" class="form-control" id="email" placeholder="EMAIL">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="username" class="col-sm-2 control-label">Username</label>

                                    <div class="col-sm-10">
                                        <input type="text" readonly name="username" value="{{- me.username | raw -}}"  class="form-control" id="username" placeholder="USERNAME">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="plainPassword" class="col-sm-2 control-label">Password</label>

                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="plainPassword" placeholder="LEAVE BLANK IF DONT WANT TO CHANGE">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-2">
                                        <button type="button" id="update-profile" class="btn btn-flat btn-block btn-danger">UPDATE</button>
                                    </div>
                                </div>
                            </form>
                            <input type="hidden" id="userId" value="{{- me.id -}}">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
{%- endblock -%}