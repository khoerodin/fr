{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script>
        window.module = 'settings';
        window.field = 'parameterName';
        var columns = [
            'parameterName',
            'parameterValue',
        ];
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    <div class="col-md-12 search-area transition">
                        <select data-placeholder="CARI NAMA SETING" class="search-parameterName form-control select2" style="width: 100%;">
                            <option></option>
                        </select>
                    </div>

                    <div class="button-area transition">
                        <a href="JavaScript:Void(0);" data-btn-add="settings" style="visibility: hidden;" class="settings add-btn h btn btn-flat btn-block btn-danger">Add</a>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="20%">Name</th>
                            <th>Value</th>
                            <th width="5%"><span class="pull-right">Action</span></th>
                        </tr>
                        </thead>

                        <tbody data-list="settings">
                            <tr><td colspan="4">LOADING DATA...</td></tr>
                        </tbody>

                    </table>

                    {#ADD MODAL#}
                    <div data-modal-add="settings" class="add-modal modal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Add a Setting</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="settings add form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="parameterName">Name</label>
                                                <input type="text" name="parameterName" class="form-control" id="parameterName" placeholder="Name">
                                            </div>
                                            <div class="form-group">
                                                <label for="parameterValue">Value</label>
                                                <input type="text" name="parameterValue" class="form-control" id="parameterValue" placeholder="Value">
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="settings save btn btn-flat btn-danger">Save</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END ADD MODAL#}

                    {#DETAIL MODAL#}
                    <div data-modal-detail="settings" class="settings detail-modal modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail of Setting</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="settings detail form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="parameterName">Name</label>
                                                <input type="text" name="parameterName" class="form-control" id="parameterName">
                                            </div>
                                            <div class="form-group">
                                                <label for="parameterValue">Value</label>
                                                <input type="text" name="parameterValue" class="form-control" id="parameterValue">
                                            </div>
                                        </div>
                                        <input type="hidden" name="id" id="id">
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="settings edit btn btn-flat btn-danger">Update</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="settings   " class="settings pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}