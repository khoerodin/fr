{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/global-crud.js"></script>
    <script src="/assets/scripts/user-activities.js"></script>
    <script>
        window.module = 'user-activities';
        window.field = 'clientName';
        var columns = [
            'createdAt',
            'clientName',
            'username',
            'path',
            'requestMethod'
        ];
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row">
                    <div class="col-md-12">
                        <select data-placeholder="CARI CLIENT NAME" class="search-clientName form-control select2" style="width: 100%;">
                            <option></option>
                        </select>
                    </div>

                    <div class="hidden">
                        <a href="JavaScript:Void(0);" style="visibility: hidden;" class=" add-btn h btn btn-flat btn-block btn-danger">Add</a>
                    </div>
                    &nbsp;&nbsp;&nbsp;
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="5%">#</th>
                                <th width="20%">Waktu</th>
                                <th width="20%">Client Name</th>
                                <th width="15">Username</th>
                                <th width="20">Path</th>
                                <th width="5">Request</th>
                                <th width="5%"><span class="pull-right">Action</span></th>
                            </tr>
                        </thead>

                        <tbody data-list="user-activities">
                            <tr><td colspan="6">...</td></tr>
                        </tbody>

                    </table>

                    {#DETAIL MODAL#}
                    <div data-modal-detail="user-activities" class=" detail-modal modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail of User Activities</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" class="user-activities detail form">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="clientName">Name</label>
                                                <input type="text" name="clientName" class="form-control" id="clientName" placeholder="Name">
                                            </div>
                                            <div class="form-group">
                                                <label for="username">Username</label>
                                                <input type="text" name="username" class="form-control" id="username" placeholder="Username">
                                            </div>
                                            <div class="form-group">
                                                <label for="path">Path</label>
                                                <input type="text" name="path" class="form-control" id="path" placeholder="Path">
                                            </div>
                                            <div class="form-group">
                                                <label for="requestMethod">Request Method</label>
                                                <input type="text" name="requestMethod" class="form-control" id="requestMethod" placeholder="Request Method">
                                            </div>
                                            <div class="form-group">
                                                <label>Request Data</label>
                                                <span id="request"></span>
                                            </div>
                                            <div class="form-group">
                                                <label for="responseContent">Response Content</label>
                                                <textarea id="responseContent" class="form-control" rows="9" readonly placeholder="Response Content"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label for="remark">Remark</label>
                                                <input type="text" name="remark" class="form-control" id="remark" placeholder="Remark">
                                            </div>
                                            <div class="form-group">
                                                <label>Source Table And Identifier</label>
                                                <span id="source"></span>
                                                <span id="identifier"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Data Changes</label>
                                                <table class="table table-striped table-bordered table-responsive">
                                                    <thead>
                                                        <tr>
                                                            <th id="changed-table" colspan="2" class="text-muted"></th>
                                                        </tr>
                                                    </thead>
                                                </table>

                                                <span id="data-changed"></span>

                                                <table class="table table-striped table-bordered table-responsive">
                                                    <tbody id="data-changed"></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul data-paging="user-activities" class="pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}