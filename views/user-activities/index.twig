{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/Admin/UserActivities.js?{{ microtime }}"></script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header row" style="margin-bottom: 0px;">
                    <div class="col-md-12">
                        <select class="form-control" id="searchUserActivities" style="width: 100%"></select>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-responsive table-hover">
                        <thead>
                        <tr>
                            <th width="3%">NO.</th>
                            <th>WAKTU</th>
                            <th>KLIEN API</th>
                            <th>USERNAME</th>
                            <th>PATH</th>
                            <th>REQUEST</th>
                            <th width="4%"><span class="pull-right">AKSI</span></th>
                        </tr>
                        </thead>
                        <tbody id="userActivitiesList"></tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul id="userActivitiesPagination" class="pagination pagination-sm pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}