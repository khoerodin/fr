{% extends 'layout.twig' %}

{% block js %}
    <script src="/assets/scripts/users.index.js"></script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Users List</h3>

                    <div class="box-tools">
                        <a href="#" id="addUser" class="btn btn-xs btn-flat btn-danger">Add</a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th style="width:5%;">#</th>
                            <th style="width:30%;">Fullname</th>
                            <th style="width:30%;">Username</th>
                            <th style="width:20%;">Email</th>
                            <th style="width:15%;">Action</th>
                        </tr>
                        {% for user in users['hydra:member'] %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ user.fullname }}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    <a href="/users/details/{{ user.id }}" class="btn btn-success btn-xs btn-flat">Details</a>
                                    <a href="#" id="#" class="btn btn-warning btn-xs btn-flat">Edit</a>
                                    <a href="/users/delete/{{ user.id }}" class="btn btn-danger btn-xs btn-flat">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>

                    {#ADD MODAL#}
                    <div class="modal" tabindex="-1" role="dialog" id="addModal">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Add a User</h4>
                                </div>
                                <div class="modal-body">
                                    <form role="form" action="/users/process-add" method="post">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="fullname">Fullname</label>
                                                <input type="text" name="fullname" class="form-control" id="fullname" placeholder="Fullname">
                                            </div>
                                            <div class="form-group">
                                                <label for="username">Username</label>
                                                <input type="text" name="username" class="form-control" id="username" placeholder="Username">
                                            </div>
                                            <div class="form-group">
                                                <label for="username">Email address</label>
                                                <input type="email" name="email" class="form-control" id="email" placeholder="Email">
                                            </div>
                                            <div class="form-group">
                                                <label for="plain-password">Password</label>
                                                <input type="password" name="plainPassword" class="form-control" id="email" placeholder="Password">
                                            </div>
                                            <div class="form-group">
                                                <label>Select</label>
                                                <select name="company" class="form-control">
                                                    {% for company in companies %}
                                                        <option value="{{ company.id }}">{{ company.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Roles</label>
                                                <select multiple class="form-control" style="height: 200px;">
                                                    <option>option 1</option>
                                                    <option>option 2</option>
                                                    <option>option 3</option>
                                                    <option>option 4</option>
                                                    <option>option 5</option>
                                                    <option>option 6</option>
                                                    <option>option 7</option>
                                                    <option>option 8</option>
                                                    <option>option 9</option>
                                                    <option>option 10</option>
                                                </select>
                                                <p class="help-block">Hold ctrl or shift (or drag with the mouse) to select more than one</p>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="enabled" value=1> <strong>Enabled</strong>
                                                </label>
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button id="save" type="button" class="btn btn-flat btn-danger">Save changes</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END ADD MODAL#}
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        {% for page in users['hydra:view'] %}
                            {% if page['hydra:first'] %}
                                <li><a href="{{ page }}" title="First page">FIRST</a></li>
                            {% endif %}
                            {% if page['hydra:next'] %}
                                <li><a href="{{ page }}" title="Next page">NEXT</a></li>
                            {% endif %}
                            {% if page['hydra:previous'] %}
                                <li><a href="{{ page }}" title="Previous page">PREVIOUS</a></li>
                            {% endif %}
                            {% if page['hydra:next'] %}
                                <li><a href="{{ page }}" title="Last page">LAST</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}