{% extends 'layout.twig' %}

{% block js %}
    <script>
        window.module = 'users';
        var columns = [
            'fullname',
            'username',
            'email'
        ];
    </script>
{% endblock %}

{%- block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Users List</h3>

                    <div class="box-tools">
                        <a href="#" class="users add btn btn-xs btn-flat btn-danger">Add</a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="width:5%;">#</th>
                                <th style="width:30%;">Fullname</th>
                                <th style="width:30%;">Username</th>
                                <th style="width:20%;">Email</th>
                                <th style="width:15%;">Action</th>
                            </tr>
                        </thead>

                        <tbody class="users tbody"></tbody>
                    </table>

                    {#ADD MODAL#}
                    <div class="users add modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Add a User</h4>
                                </div>
                                <div class="modal-body users add">
                                    <form role="form" class="users form" action="/users/process-add" method="post">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="fullname">Fullname</label>
                                                <input type="text" name="fullname" class="form-control" id="fullname" placeholder="Fullname">
                                            </div>
                                            <div class="form-group">
                                                <label for="username">Username</label>
                                                <input type="text" name="username" class="form-control" id="username" placeholder="Username">
                                            </div>
                                            <div class="form-group">
                                                <label for="username">Email address</label>
                                                <input type="email" name="email" class="form-control" id="email" placeholder="Email">
                                            </div>
                                            <div class="form-group">
                                                <label for="plainPassword">Password</label>
                                                <input type="password" name="plainPassword" class="form-control" id="plainPassword" placeholder="Password">
                                            </div>
                                            <div class="form-group">
                                                <label>Select</label>
                                                <select name="company" class="form-control">
                                                    {% for company in companies %}
                                                        <option value="/api/companies/{{ company.id }}">{{ company.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="enabled" value="true"> <strong>Enabled</strong>
                                                </label>
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="users save btn btn-flat btn-danger">Save</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END ADD MODAL#}

                    {#DETAIL MODAL#}
                    <div class="users detail modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Detail of a User</h4>
                                </div>
                                <div class="modal-body users detail">
                                    <form role="form" class="users form" action="/users/process-add" method="post">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="fullname">Fullname</label>
                                                <input type="text" readonly name="fullname" class="form-control" id="fullname" placeholder="Fullname">
                                            </div>
                                            <div class="form-group">
                                                <label for="username">Username</label>
                                                <input type="text" readonly name="username" class="form-control" id="username" placeholder="Username">
                                            </div>
                                            <div class="form-group">
                                                <label for="username">Email address</label>
                                                <input type="email" readonly name="email" class="form-control" id="email" placeholder="Email">
                                            </div>
                                            <div class="form-group">
                                                <label for="plainPassword">Password</label>
                                                <input type="password" readonly name="plainPassword" class="form-control" id="plainPassword" placeholder="Password">
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" readonly name="enabled" value="true"> <strong>Enabled</strong>
                                                </label>
                                            </div>
                                        </div>
                                        <!-- /.box-body -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {#END DETAIL MODAL#}
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        {% for page in users['hydra:view'] %}
                            {% if page['hydra:first'] %}
                                <li><a href="{{ page }}" title="First page">FIRST</a></li>
                            {% endif %}
                            {% if page['hydra:next'] %}
                                <li><a href="{{ page }}" title="Next page">NEXT</a></li>
                            {% endif %}
                            {% if page['hydra:previous'] %}
                                <li><a href="{{ page }}" title="Previous page">PREVIOUS</a></li>
                            {% endif %}
                            {% if page['hydra:next'] %}
                                <li><a href="{{ page }}" title="Last page">LAST</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
{%- endblock -%}